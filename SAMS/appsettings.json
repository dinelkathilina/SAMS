{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "JWT": {
    "ExpireDays": 7
  },
  "IpRateLimiting": {
    "EnableEndpointRateLimiting": true,
    "StackBlockedRequests": false,
    "RealIpHeader": "X-Real-IP",
    "ClientIdHeader": "X-ClientId",
    "HttpStatusCode": 429,
    "GeneralRules": [
      {
        "Endpoint": "*/login",
        "Period": "1m",
        "Limit": 5
      }
    ]
  },
  "DetailedErrors": false
}
// Environment Variables (set these in your deployment environment)
// ConnectionStrings__DefaultConnection=Server=tcp:your-server.database.windows.net,1433;Initial Catalog=YourDB;...
// JWT__Secret=your-secret-key
// JWT__ValidIssuer=https://your-issuer-url
// JWT__ValidAudience=https://your-audience-url